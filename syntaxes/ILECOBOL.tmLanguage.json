{
  "_copyright": "The MIT License (MIT)\nCopyright (c) 2015-2023 spgennard\nSource: https://github.com/spgennard/vscode_cobol/blob/main/syntaxes/ILECOBOL.tmLanguage.json",
  "$schema": "https://raw.githubusercontent.com/spgennard/vscode_cobol/main/schemas/tmlanguage.json",
  "fileTypes": [],
  "name": "ILECOBOL",
  "patterns": [
    {
      "comment": "ILE COBOL **FREE fully free-format indicator (must be on first line)",
      "match": "^(\\*\\*FREE)\\s*$",
      "name": "keyword.control.directive.free.ilecobol"
    },
    {
      "comment": "ILE COBOL PROCESS compiler directive",
      "match": "(?i)^\\s*(PROCESS)\\b(.*)$",
      "captures": {
        "1": {
          "name": "keyword.control.directive.process.ilecobol"
        },
        "2": {
          "name": "string.unquoted.process-options.ilecobol"
        }
      }
    },
    {
      "comment": "ILE COBOL /COPY compiler directive",
      "match": "(?i)^\\s*(/COPY)\\b(.*)$",
      "captures": {
        "1": {
          "name": "keyword.control.directive.copy.ilecobol"
        },
        "2": {
          "name": "string.unquoted.copybook-name.ilecobol"
        }
      }
    },
    {
      "comment": "ILE COBOL /INCLUDE compiler directive",
      "match": "(?i)^\\s*(/INCLUDE)\\b(.*)$",
      "captures": {
        "1": {
          "name": "keyword.control.directive.include.ilecobol"
        },
        "2": {
          "name": "string.unquoted.copybook-name.ilecobol"
        }
      }
    },
    {
      "comment": "Older ILE free-format delimiters",
      "match": "(?i)^\\s*(/FREE|/END-FREE)\\s*$",
      "name": "keyword.control.directive.free-block.ilecobol"
    },
    {
      "begin": "(?<![-_a-zA-Z0-9()-])(?i:remarks\\.)",
      "beginCaptures": {
        "0": {
          "name": "keyword.ilecobol"
        }
      },
      "name": "comment.1.block.ilecobol.remark",
      "end": "(?i:end\\-remark|\\*{Bench}end|environment\\s+division|data\\s+division|working-storage\\s+section|file-control)",
      "endCaptures": {
        "0": {
          "name": "keyword.ilecobol"
        }
      }
    }, 
    {
      "match": "(?<![-_])(?i:format-of|acquire|alias|background-colour|beep|commitment|control-area|crt-under|cursor|db-format-name|dbcs-edited|default|described|drop|downdrop|ebcdic|empty-check|externally-described-key|file-stream|foreground-colour|format|fromfull|indic|indicator|indicators|kanji|left-justify|length-check|library|locale|modified|nono-echo|none|null-key-map|null-map|parse|prior|right-justify|rolling|screen|secure|space-fill|starting|subfile|substitute|title|trailing-sign|transaction|vlr|zero-fill|readc)(?![0-9A-Za-z_-])",
      "name": "variable.language"
    },
        {
      "match": "(?<![-_])(?i:hival|loval)(?=\\s+|\\.|,|\\))",
      "name": "constant.language.figurative.ilecobol"
    },
    {
      "include": "source.cobol"
    },
    {
      "match": "(^\\\\D.*)$",
      "name": "token.debug-token"
    }
  ],
  "scopeName": "source.ilecobol"
}