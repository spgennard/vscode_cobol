      },
      "end": "\"",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.pl1"
        }
      },
      "contentName": "string.quoted.double.pl1"
    },
    {
      "name": "string.quoted.single.pl1",
