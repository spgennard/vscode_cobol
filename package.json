            },
            {
                "key": "ctrl+alt+w",
                "command": "cobolplugin.move2ws",
                "when": "editorTextFocus && editorLangId == COBOL"
            },
            {
                "key": "ctrl+alt+w",
                "command": "cobolplugin.move2ws",
                "when": "editorTextFocus && editorLangId == ACUCOBOL"
            },
            {
                "key": "ctrl+alt+w",
