                "message": 2,
                "file": 3,
                "line": 4,
                "column": 5
            },
            {
                "name": "mfcobol-errformat2-basefn",
                "regexp": "^\\*+\\s+COBCH\\d+([a-zA-Z])\\s+([^:]+):\\s+[\\.\\/].*[\\/](\\S*)\\((\\d+)(\\d+)[,].*\\)$",
                "severity": 1,
                "message": 2,
                "file": 3,
                "line": 4,
                "column": 5
            },
            {
                "name": "mfcobol-errformat3",
                "regexp": "^(\\S*)\\((\\d+),(\\d+)\\).*(error|warning)(.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
            },
            {
                "name": "mfcobol-errformat3-basefn",
                "regexp": "^[\\./].*[/](\\S*)\\((\\d+),(\\d+)\\).*(error|warning)(.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
            },
            {
                "name": "opencobol-cobc",
                "regexp": "^(.*):\\s(\\d+):.*([eE]rror|[wW]arning):(.*)$",
                "file": 1,
                "line": 2,
                "severity": 3,
                "message": 4
            },
            {
                "name": "opencobol-error-cobc",
                "regexp": "^(.*):\\s(\\d+):.*([eE]rror|[fF]ehler|[eE]rrores|[eE]rrores):(.*)$",
                "file": 1,
                "line": 2,
                "message": 4
            },
            {
                "name": "opencobol-warning-cobc",
                "regexp": "^(.*):\\s(\\d+):.*([wW]arning|[wW]arnung|[aA]lerta):(.*)$",
                "file": 1,
                "line": 2,
                "message": 4
            },
