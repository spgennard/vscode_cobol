            {
                "language": "dir",
                "path": "./snippets/dir.json"
            },
            {
                "language": "JCL",
                "path": "./snippets/jcl.json"
            }
        ],
        "problemPatterns": [
            {
                "name": "mfcobol-msbuild",
                "regexp": "^(\\S+)\\((\\d+),(\\d+)\\).*(error|warning)(.*)\\[.*$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
            },
            {
                "name": "mfcobol-errformat3",
                "regexp": "^(\\S*)\\((\\d+),(\\d+)\\).*(error|warning)(.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
            },
            {
                "name": "mfcobol-errformat2",
                "regexp": "^\\*+\\s+COBCH\\d+([a-zA-Z])\\s+([^:]+):\\s+(\\S*)\\((\\d+),(\\d+),.*\\)$",
                "severity": 1,
                "message": 2,
                "file": 3,
                "line": 4,
                "column": 5
            },
            {
                "name": "opencobol-cobc",
                "regexp": "^(.*):\\s(\\d+):.*(error|warning):(.*)$",
                "file": 1,
                "line": 2,
                "severity": 3,
                "message": 4
            },
            {
                "name": "gnucobol-cobc",
                "regexp": "^(.*):\\s(\\d+):.*(error|warning):(.*)$",
                "file": 1,
                "line": 2,
                "severity": 3,
                "message": 4
            },
            {
                "name": "cobolit-cobc",
                "regexp": "^(.*):\\s(\\d+):.*(error|warning):(.*)$",
                "file": 1,
                "line": 2,
                "severity": 3,
                "message": 4
            },
            {
                "name": "acucobol-ccbl",
                "regexp": "^(.*),\\sline\\s(\\d+):\\s(.*)$",
                "file": 1,
                "line": 2,
                "message": 3
            }
        ],
        "problemMatchers": [
            {
                "name": "mfcobol-msbuild",
                "owner": "cobol",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": "$mfcobol-msbuild"
            },
            {
                "name": "mfcobol-errformat3",
                "owner": "cobol",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": "$mfcobol-errformat3"
            },
            {
                "name": "mfcobol-errformat2",
                "owner": "cobol",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": "$mfcobol-errformat2"
            },
            {
                "name": "gnucobol-cobc",
                "owner": "cobol",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": "$gnucobol-cobc"
            },
            {
                "name": "opencobol-cobc",
                "owner": "cobol",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": "$opencobol-cobc"
            },
            {
                "name": "cobolit-cobc",
                "owner": "cobol",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": "$cobolit-cobc"
            },
            {
                "name": "acucobol-ccbl",
                "owner": "cobol",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": "$acucobol-ccbl"
            }
